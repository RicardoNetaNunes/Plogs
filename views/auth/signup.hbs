<a href="/" class="bi bi-arrow-left"></a>
<header>
<img src="/images/micrologo.jpg" alt="logo" class="logo">
</header>
<br>
<br>
<form class="dropdown-menu p-4"></form>
<form action="/signup" method="POST">
    <div class="mb-3">
    <input name="username" type="text" class="form-control" placeholder="Choose a username">
    <label for="exampleDropdownFormPassword2" class="form-label">Username</label>
  </div>
  <div class="mb-3">
    <input name="email" type="email" class="form-control" id="exampleDropdownFormEmail2" placeholder="email@example.com">
    <label for="exampleDropdownFormEmail2" class="form-label">Email address</label>
  </div>
  <div class="mb-3">
  <input name="password" type="password" class="form-control"  placeholder="Enter your password" >
  <label name="password"  class="form-label">Password</label>
  </div>
  <div class="mb-3">
  <input name="confirmPpassword" type="password" class="form-control"  placeholder="Enter your password again" >
  <label name="password"  class="form-label">Confirm your password</label>
</div>
  <button type="submit" class="btn myButton">Sign up</button>
</form>
</form>

{{#if error}}
<p class="error">Ups! {{error}}</p>
{{/if}}



